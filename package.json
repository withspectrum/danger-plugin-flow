{
  "name": "danger-plugin-flow",
  "description": "Ensure all new JS files in a project are flow typed",
  "author": {
    "name": "Max Stoiber",
    "email": "contact@mxstbr.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/withspectrum/danger-plugin-flow.git"
  },
  "bugs": {
    "url": "https://github.com/withspectrum/danger-plugin-flow/issues"
  },
  "homepage": "https://github.com/withspectrum/danger-plugin-flow#readme",
  "keywords": [
    "danger",
    "danger-plugin"
  ],
  "version": "1.4.0",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "build": "tsc",
    "test": "jest",
    "predocs": "rm -rf docs/",
    "docs": "esdoc -c .esdoc.json",
    "prepublish": "yarn build",
    "semantic-release": "semantic-release pre && yarn publish && semantic-release post",
    "prettier": "prettier",
    "prettier-write": "yarn prettier --parser typescript --no-semi --trailing-comma es5 --write --print-width 120",
    "prettier-project": "yarn prettier-write 'src/**/*.{ts,tsx}'",
    "lint": "tslint \"src/**/*.ts\""
  },
  "license": "MIT",
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^19.2.4",
    "@types/node": "^10.12.19",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.0.0",
    "danger": "*",
    "husky": "^0.13.3",
    "jest": "^20.0.1",
    "lint-staged": "^3.4.1",
    "prettier": "^1.16.1",
    "semantic-release": "^6.3.6",
    "ts-jest": "^20.0.0",
    "tslint": "^5.4.3",
    "typescript": "^2.3.2",
    "validate-commit-msg": "^2.12.1"
  },
  "optionalDependencies": {
    "esdoc": "^0.5.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "tslint --fix",
      "yarn prettier-write --",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "micromatch": "^3.1.10"
  }
}
